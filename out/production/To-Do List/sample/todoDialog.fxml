<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="sample.DialogController" style="-fx-background-color: black">
    <content>
        <GridPane hgap="10" vgap="10" style="-fx-background-color: black">
            <Label text="(Do Not Enter A New Line, FULL PARAGRAPHS ONLY)" GridPane.rowIndex="0" GridPane.columnIndex="0" textFill="gray"/>
            <Label text="Short Description: " GridPane.rowIndex="1" GridPane.columnIndex="0" textFill="gray"/>
            <TextField fx:id="shortDescription" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Label text="Details:" GridPane.rowIndex="2" GridPane.columnIndex="0" textFill="gray"/>
            <TextArea fx:id="detailsArea" GridPane.rowIndex="2" GridPane.columnIndex="1" wrapText="true"/>
            <Label text="Deadline: " GridPane.rowIndex="3" GridPane.columnIndex="0" textFill="gray"/>
            <DatePicker fx:id="datePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
        </GridPane>
    </content>
</DialogPane>
